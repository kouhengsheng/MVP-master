<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="me.yaowei.mvp">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name="com.kou.mvp.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.kou.mvp.ui.FilterActivity">
        </activity>
        <activity
            android:name="com.kou.mvp.ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.kou.mvp.ui.LoginActivity"/>
        <activity android:name="com.kou.mvp.ui.TestRetrofitActivity">
        </activity>
        <activity
            android:name="com.kou.mvp.ui.DrawerActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name="com.kou.mvp.ui.DrawerActivity2">
        </activity>
        <activity android:name="com.kou.mvp.ui.TestActivity">
        </activity>
        <activity android:name="com.kou.mvp.ui.CityPickerActivity"/>
    </application>

</manifest>